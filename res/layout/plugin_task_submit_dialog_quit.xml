<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/plugin_task_submit_tvTips"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="100dp"
         />
    
    <!-- 按钮栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/plugin_task_submit_btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/plugin_task_submit_btn_confirm_background"
            android:text="@string/confirm"
            android:textColor="#FFFFFF" 
            android:textSize="16sp" />

        <Button
            android:id="@+id/plugin_task_submit_btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/plugin_task_submit_btn_cancel_background"
            android:text="@string/cancel"
            android:textColor="#919191" 
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
